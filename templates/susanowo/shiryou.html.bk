{% extends "susanowo/base.html" %}

{% load static %}
{% block body %}
<script src="{% static 'js/susanowo/shiryou.js' %}" ></script>
<form method="POST" action="{% url 'susanowo:shiryouupd' todo_id %}" id="shiryouupd" >
<!--<form method="POST" enctype="multipart/form-data" action="{% url 'susanowo:shiryouupd' todo_id %}" id="shiryouupd" >-->
    {% csrf_token %}

    <div id="header" style="position: relative; left:100px;">
        資料登録
    </div>

    <div id="todo_list" style="position: relative; left:100px;">
        <div id="gtd_date">
            {{today}}
        </div>

        <!-- ========== テーブル全体を表す div ========== -->
        <div style="width:700px; border-style:solid;border-width:1px;">
        <!-- ===== ヘッダ部(THEAD相当)を表す div ===== -->
            <div style="width:100%">
                <table class="list_class">
                    <thead>
                        <tr>
                            <th class="th_class" style='width:600px'>ファイル名</th>
                            <th class="th_class" style='width:50px'>追加</th>
                            <th class="th_class" style='width:50px'>削除</th>
                        </tr>
                    </thead>
                </table>
            </div>
            <!-- ===== ボディー部(TBODY相当)を表す div ===== -->
            <div style="height:500px; width:100%;overflow-y:scroll;overflow-x:hidden;background:#BBBBBB">
                <table id="shiryou" class="list_class">
                    <tbody id="shiryou_tbody">
                        {% if tshiryous|length == 0 %}
                            <tr id="row{{shiryou.id}}" class="normal_row">
                                <td style='width:600px;'>
                                    <a href="{{shiryou.attach.file.url}}" >{{shiryou.attach}}</a>
                                </td>
                                <td style='width:50px'>
                                    <input type="button" id="add" name="add" class="class_add square_btn_small" value="追加" />
                                </td>
                                <td style='width:50px'>
                                    <input type="button" id="del" name="del" class="class_del square_btn_small" value="削除" />
                                </td>
                            </tr>
                        {% else %}
                            {% for shiryou in tshiryous %}
                            <tr id="row{{shiryou.id}}" class="normal_row">
                                <td style='width:600px;'>
                                    <a href="{{shiryou.attach.file.url}}" >{{shiryou.attach}}</a>
                                    <input type="hidden" id="id" value="{{shiryou.id}}">
                                </td>
                                <td style='width:50px'>
                                    <input type="button" id="add" name="add" class="class_add square_btn_small" value="追加" />
                                </td>
                                <td style='width:50px'>
                                    <input type="button" id="del" name="del" class="class_del square_btn_small" value="削除" />
                                </td>
                            </tr>
                            {% endfor %}
                        {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
            
    </div>

    <table id="controller" style="position: relative; left:100px;">
        <tr>
            <td style="width:100px;text-align:center;"><input type="submit" value="登録" class="square_btn" /></td>
            <td style="width:300px;text-align:center;"><a href="/susanowo/index" class="square_btn">キャンセル</a></td>
        </tr>    
    </table>
</form>
{% endblock %}